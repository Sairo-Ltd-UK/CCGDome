# Normalize text files to CRLF
* text=auto eol=crlf

# Unity YAML-based files (kept as text, not in LFS)
*.cs         text eol=crlf
*.meta       text eol=crlf
*.shader     text eol=crlf
*.cginc      text eol=crlf
*.unity      text eol=crlf
*.prefab     text eol=crlf
*.mat        text eol=crlf
*.anim       text eol=crlf
*.controller text eol=crlf

# Git LFS for large/binary assets
*.psd     filter=lfs diff=lfs merge=lfs -text
*.fbx     filter=lfs diff=lfs merge=lfs -text
*.png     filter=lfs diff=lfs merge=lfs -text
*.jpg     filter=lfs diff=lfs merge=lfs -text
*.tga     filter=lfs diff=lfs merge=lfs -text
*.wav     filter=lfs diff=lfs merge=lfs -text
*.mp4     filter=lfs diff=lfs merge=lfs -text
*.blend   filter=lfs diff=lfs merge=lfs -text

# Platform-specific binaries
Assets/Firebbase/Plugins/x86_64/*.bundle filter=lfs diff=lfs merge=lfs -text
Assets/Firebase/Plugins/x86_64/*.so filter=lfs diff=lfs merge=lfs -text
*.bundle  filter=lfs diff=lfs merge=lfs -text
*.so      filter=lfs diff=lfs merge=lfs -text
